@model JoF.Rail.Standard.Models.HistoricalPerformance.DetailModel

@using JoF.Rail.Standard.Extensions

<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content bg-off-white text-secondary">
        <div class="modal-header">
            <h5 class="modal-title" id="serviceInfoTitle">Service Details for @Model.Detail.Rid</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            <div>Date: @Model.Detail.DateOfService</div>
            <div>Toc: @Model.Detail.Toc</div>
            <div>Rid: @Model.Detail.Rid</div>
            @foreach (var l in Model.Detail.Locations)
            {
                var delayArr = @l.TimeArrivalPublic.ToTimeDelay(l.TimeArrivalActual, false);
                var delayDep = @l.TimeDeparturePublic.ToTimeDelay(l.TimeDepartureActual, false);

                <div class="row align-items-center border-top">
                    <div class="offset-1 col-3">
                        @l.Location
                    </div>
                    <div class="col-2">
                        <span class="d-block">@l.TimeArrivalPublic</span>
                        <span class="d-block">@l.TimeDeparturePublic</span>
                    </div>
                    <div class="col-2">
                        <span class="d-block">
                            @l.TimeArrivalActual
                        </span>
                        <span class="d-block">
                            @l.TimeDepartureActual
                        </span>
                    </div>
                    <div class="col-1">
                        <span class="d-block">
                            <small class="text-danger">
                                @if (delayArr != "-")
                                {@delayArr}
                            </small>
                        </span>
                        <span class="d-block">
                            <small class="text-danger">
                                @if (delayDep != "-")
                                {@delayDep}
                            </small>
                        </span>
                    </div>
                    <div class="col-2">
                        @if (l.LateCode != "")
                        {
                            <a tabindex="0" role="button" class="fas fa-exclamation-triangle text-danger"
                               data-toggle="popover"
                               title="Delay code @l.LateCode"
                               data-content="Train was delayed and/or cancelled.  Coz."
                               data-trigger="focus"></a>
                        }
                        @l.LateCode
                    </div>
                </div>
            }
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
    </div>
</div>
